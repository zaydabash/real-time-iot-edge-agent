generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Device {
  id        String    @id @default(uuid())
  name      String
  location  String?
  createdAt DateTime  @default(now())
  metrics   Metric[]
  anomalies Anomaly[]

  @@map("devices")
}

model Metric {
  id           String     @id @default(uuid())
  deviceId     String
  device       Device     @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  ts           DateTime   @default(now())
  temperature_c Float
  vibration_g   Float
  humidity_pct  Float
  voltage_v     Float
  anomalies     Anomaly[]

  @@index([deviceId, ts])
  @@index([ts])
  @@map("metrics")
}

model Anomaly {
  id        String   @id @default(uuid())
  deviceId  String
  device    Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  metricId  String?
  metric    Metric?  @relation(fields: [metricId], references: [id], onDelete: SetNull)
  ts        DateTime @default(now())
  score     Float
  type      String
  flagged   Boolean  @default(true)

  @@index([deviceId, ts])
  @@index([ts])
  @@map("anomalies")
}

